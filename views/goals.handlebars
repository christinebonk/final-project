
<!--How much do you need, When do you want to retire-->
<main>
  <div class="row">
  <form class="col s12">
    <!--Row-->
    <div class="row">
      <div class="input-field col s12">
        <h3 class="onboarding-label">My dream financial independence date is</h3>
        <input type="text" name="date" id="date" class="datepicker validate" required>
        <label class="browser-default visually-hidden" for="date">What's your dream financial independence date?</label>
        <p id="date-error"></p>
      </div>
    </div>
  <!--Row-->
    <div class="row">
      <div class="input-field col s12">
        <h3 class="onboarding-label">I plan to spend <span class="spend">$</span><span class="spend rangeValue">80,000</span> annually in retirement</h3>
        <!--Range Input-->
          <input type="range" id="retirement-amount" name="retirement-amount" min="5000" max="150000" step="5000" value="slider" onchange="document.querySelector('.rangeValue').innerHTML = this.value">
          
          
        <label class="browser-default visually-hidden" for="retirement-amount">Enter annual expenses in retirement</label>
        <p id="retirement-amount-error"></p>
      </div>
    </div>
   </form>
</main>
<!--Footer-->
<footer class="onboarding">
  <!--Next Button-->
  <div class="page-bottom">
    <a class="btn waves-effect waves-light goals-submit" name="action" href="/budget">Next
    </a>
  </div>
</footer>

<script>
  //Updating progress bar
  $(".progress-bar li:first-child").addClass("active");
</script>